{% extends '::base2.html.twig' %} {% block body %}
<div class=" col-md-8">
	<h1>Mes Plats du jour</h1>
	<hr>
	
		 <a class="btn btn-success " href="{{ path('restaurant_platsdujour_new') }}"> Publier un nouveau platdu jour </a></li>
	 <hr>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Prix</th>
				<th>Desciption</th>
				 
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for entity in entities %}
			
			<tr><a href="{{ path('restaurant_platsdujour_show', { 'id': entity.id }) }}"> 
				<td><a
					href="{{ path('restaurant_platsdujour_show', { 'id': entity.id }) }}">{{
						entity.id }}</a></td>
				<td>{{ entity.nom }}<br>
				<br> {% for img in entity.medias %} <img class="img-circle"
					src="{{ asset(img.AssetPath)}}" width="50" height="50">
					 {% endfor %} <a href="{{ path('restaurant_platsdujour_addImg', { 'id': entity.id }) }}">  <span
						class="icon icon-plus"></span></a>
				</td>
				<td>{{ entity.prix }}</td>
				<td>{{ entity.desciption }}</td>
			 
				<td><a class="btn btn-default"
					href="{{ path('restaurant_platsdujour_show', { 'id': entity.id }) }}"><span
						class="icon icon-look">Voir</a> <a
					class="btn btn-primary" href="{{ path('restaurant_platsdujour_edit', { 'id': entity.id }) }}"><span
						class="icon icon-edit"></span></a></td>
			 </a></tr>
			
			
			{% endfor %}
		</tbody>
	</table>

	 
</div>
{% endblock %}
