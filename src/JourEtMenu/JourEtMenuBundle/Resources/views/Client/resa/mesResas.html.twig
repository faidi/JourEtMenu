{% extends '::base2.html.twig' %} {% block body -%}
<div class=" col-md-8">
	<h1>Mes réservations</h1>
	{% for flashMessage in app.session.flashbag.get('notice') %}
    <div class="alert alert-success">
        {{ flashMessage }}
    </div>
{% endfor %}
	<hr>
	<table class="table table-hover">
		<thead>
			<tr>
 				<th>Restaurants</th>
				<th>N°P </th>

				<th>Date</th>
				<th>Action</th>
				
			</tr>
		</thead>
		<tbody>
			{% for entity in entities %}
			<tr>

				<td>{{ entity.restaurant.nom }}</td>
				<td>{{ entity.nbrPersonne }}</td>
				<td>{{ entity.date|date("d/m/Y h:m:s")}}
				
				<td>{{ entity.status.nom }}</td>
{% if entity.status.id =='3' %}
				<td>  <a class="btn btn-danger"
					href="{{ path('annuler',{'id':entity.id}) }}"><span
						class="icon icon-remove"></span></a>
						
						
						{% endif %}  </td>
						
			</tr>
			{% endfor %}
		</tbody>
	</table>

</div>
{% endblock %}
