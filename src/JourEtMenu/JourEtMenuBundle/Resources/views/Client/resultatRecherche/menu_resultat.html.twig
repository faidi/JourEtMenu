{% if resultats|length != 0 %}
<!-- Popover #1 -->

{% for resultat in resultats %}


<div class="span6"">

	<div class="media">
		<a class="pull-left"
		href="{{ path('showRestaurant',{'id':resultat.restaurant.id}) }}"
		target="_parent"> <img alt="image" class="img-Polaroid"
		src=" {%set a=resultat.restaurant.images|last  %} {{ asset(a.AssetPath)}} "
		width="100" height="100">
	</a>


	<div class="media-body fnt-smaller">

		<h3 class="media-heading">
			{{ resultat.nom }}
			<h3 class="pull-right">{{ resultat.prix }} €</h3>

		</h3>


		<ul class="list-inline mrg-0 btm-mrg-10 clr-535353">
			<li>2 <span class="icon icon-time"></span>min
			</li>

			

			<li>5 <i class="icon icon-star icon-warning" style="color: orange;"></i></li>

		

			<li><div class="essa">
			
			{% if resultat.restaurant in app.user.getRestaurantfavoris() %} tst
			
			
			{% endif %}<a class="heart" id="{{ resultat.restaurant.id }}" >
			
			
			
			
			<i class="btn  icon icon-heart icon-warning" id="clr" style="color: pink ;"></i>	
					
			</a>
			</div>
			
			</li>
		</ul>

		<p>
			Chez : <a
			href="{{ path('showRestaurant',{'id':resultat.restaurant.id}) }}"
			
			class="btn btn-infos"><span>{{ resultat.restaurant.nom }}</span>
			
			</a>
		</p>

		<p style="color: gray;" class="hidden-xs">{{resultat.description}}...</p>

	</div>

	<div class="userInfo tooltip tooltip-inner"
	style="display: none; background-color: #CDA49E;">


	<div
	style=" text-align: center; height: auto; width: auto; font-size: 12px; border-radius: 5px;">

	<div style=" height: 35px;margin: 0px;">
		<h3>{{ resultat.nom }} {{ resultat.prix }}€</h3>
	</div>
	<div
	style="background-color: #E8D7E0; border-color: gray; height: 10%;">
	<h4 class="warning">Entrées</h4>
</div>



<div class="entrees">
	{% for ent in resultat.entrees %}
	<h5>{{ ent.nom }}</h5>
	{% endfor %}
</div>



<div
style="background-color: #E8D7E0; border-color: gray; height: 10%;">
<h4 class="warning">Plats</h4>
</div>
<div class="plats">
	{% for ent in resultat.plats %}
	<h5>{{ ent.nom }}</h5>
	{% endfor %}
</div>
<div
style="background-color: #E8D7E0; border-color: gray; height: 10%;">
<h4 class="warning">Desserts</h4>
</div>
<div class="desserts">
	{% for ent in resultat.desserts %}
	<h5>{{ ent.nom }}</h5>
	{% endfor %}
</div>
</div>
</div>

</div>

<div class=" ">

	{% if resultat.aperitifs|length !="0" %} <small> <span
	class="icon icon-glass"></span>+ {% endif %} {% if
	resultat.entrees|length !="0" %} <span class="label label-primary">Entrée</span>+
	{% endif %} {% if resultat.plats|length !="0" %} <span
	class="label label-warning">Plat</span> {% endif %} {% if
	resultat.desserts|length !="0" %} +<span class="label label-success">Dessert</span>
	{% endif %} {% if resultat.digestifs|length !="0" %} +<span
	class="icon icon-glass "></span>{% endif %}{% if
	resultat.digestifs|length !="0" %} +<span class="icon icon-coffee "></span>{%
	endif %}
</small>

<ul class="list-inline mrg-0 btm-mrg-10 clr-535353 pull-right">


	<li><a class="btn btn-success"
		href="{{ path('reserver',{'menu':resultat.id}) }} ">Je réserve</a></li>
	</ul>

</p>
</div>





</div>

{% endfor %}
<div id="favMod" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Information!</h4>
            </div>
            <div class="modal-body">
                <p>Opps!! Ce restaurant fait déja parti de vos favoris !</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>
{% else %} Aucun résultat {% endif %}

